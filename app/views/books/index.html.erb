<div class="container">
  <div class="flex justify-between items-center mb-4">
    <div>
      <h1 class="mb-2">ğŸ“š Available Books</h1>
      <p class="text-secondary mb-0">Discover amazing books shared by your community</p>
    </div>
    <% if logged_in? %>
      <%= link_to new_book_path, class: "btn btn-primary" do %>
        <span style="margin-right: 0.5rem;">â•</span>
        Add New Book
      <% end %>
    <% end %>
  </div>

  <% if @books.any? %>
    <div class="grid grid-auto-fit">
      <% @books.each do |book| %>
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">
              <%= link_to book.title, book_path(book), style: "text-decoration: none; color: var(--primary-color);" %>
            </h3>
            <p class="card-subtitle">by <%= book.author %></p>
          </div>
          
          <div class="card-body">
            <% if book.description.present? %>
              <p class="card-text">
                <%= truncate(book.description, length: 120) %>
              </p>
            <% end %>
            
            <div class="mb-3">
              <div class="flex items-center gap-2 mb-2">
                <strong>Condition:</strong>
                <% case book.condition %>
                <% when "New" %>
                  <span class="badge badge-success">âœ¨ <%= book.condition %></span>
                <% when "Good" %>
                  <span class="badge badge-info">ğŸ‘ <%= book.condition %></span>
                <% when "Fair" %>
                  <span class="badge badge-warning">ğŸ‘Œ <%= book.condition %></span>
                <% when "Poor" %>
                  <span class="badge badge-danger">ğŸ“– <%= book.condition %></span>
                <% end %>
              </div>
              
              <div class="flex items-center gap-2 mb-2">
                <strong>Status:</strong>
                <% if book.available? %>
                  <span class="badge badge-success">âœ… Available</span>
                <% else %>
                  <span class="badge badge-danger">âŒ Not Available</span>
                <% end %>
              </div>
              
              <% if book.user %>
                <div class="flex items-center gap-2 mb-1">
                  <strong>Owner:</strong>
                  <span class="text-secondary">ğŸ‘¤ <%= book.user.name %></span>
                </div>
                <div class="flex items-center gap-2">
                  <strong>Location:</strong>
                  <span class="text-secondary">ğŸ“ <%= book.user.location %></span>
                </div>
              <% end %>
            </div>
          </div>
          
          <div class="card-footer">
            <%= link_to book_path(book), class: "btn btn-primary btn-sm" do %>
              ğŸ‘ï¸ View Details
            <% end %>
            
            <% if logged_in? && (@current_user == book.user || admin?) %>
              <%= link_to edit_book_path(book), class: "btn btn-warning btn-sm" do %>
                âœï¸ Edit
              <% end %>
              
              <%= button_to book_path(book), method: :delete, 
                  data: { confirm: "Are you sure you want to delete '#{book.title}'?" }, 
                  class: "btn btn-danger btn-sm" do %>
                ğŸ—‘ï¸ Delete
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    
    <div class="text-center mt-5">
      <p class="text-secondary">
        Showing <%= @books.count %> book<%= @books.count == 1 ? '' : 's' %> available for sharing
      </p>
    </div>
  <% else %>
    <div class="empty-state">
      <div class="empty-state-icon">ğŸ“š</div>
      <h3>No books available yet</h3>
      <p>Be the first to share a book with your community and help build our library!</p>
      <% if logged_in? %>
        <%= link_to new_book_path, class: "btn btn-primary btn-lg" do %>
          ğŸ“– Add the First Book
        <% end %>
      <% else %>
        <div class="flex justify-center gap-3">
          <%= link_to signup_path, class: "btn btn-primary" do %>
            ğŸš€ Sign Up to Add Books
          <% end %>
          <%= link_to login_path, class: "btn btn-outline" do %>
            ğŸ”‘ Login
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>

  <div class="text-center mt-5">
    <%= link_to root_path, class: "btn btn-outline" do %>
      â† Back to Home
    <% end %>
  </div>
</div>